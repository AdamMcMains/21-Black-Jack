<h1 class="title">BLACK JACK</h1>
    <div class="main">
        <h2><span id="command"></span></h2>
        <div class="row1">
            <div id="your-box">
                <h2>You: <span id="yourscore">0</span></h2>
            </div>
            <div id="dealer-box">
                <h2>Dealer: <span id="dealerscore">0</span></h2>
            </div>
        </div>
        <div class="row2">
            <div class="buttons">
                <button class="btn-lg" id="hit"  > Hit </button>
                <button class="btn-lg" id="fold"  > Fold </button> 
                <button class="btn-lg" id="stand" > Stay </button>
                <button class="btn-lg" id="deal" > Deal </button>
            </div>
        </div>
        <div class="row3">
            <h3>Scoreboard: </h3>
            <table>
                <tr>
                    <th>Wins</th>
                    <th>Losses</th>
                    <th>Draws</th>
                </tr>
                <tr>
                    <td><span id="wins">0</span></td>
                    <td><span id="losses">0</span></td>
                    <td><span id="draws">0</span></td>
                </tr>
            </table>
        </div>
         {{#if logged_in}}
        <nav>
        <button class="btn" id="logout">logout</button>
        </nav>
        {{/if}}
    </div>



    {{#if logged_in}}
    <script src="/js/logout.js"></script>
    {{/if}}
    <script src="/js/script.js"></script>